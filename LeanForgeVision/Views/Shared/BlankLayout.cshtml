@{
    var imageUrl = Url.Content("~/assets/images/bg-shape.png");
}

<!DOCTYPE html>
<html lang="en" dir="ltr" x-data="{ direction: 'ltr' }" x-bind:dir="direction">

<head>
    @Html.Partial("~/Views/Shared/title_meta.cshtml")
    @RenderSection("styles", false)
    @Html.Partial("~/Views/Shared/head_css.cshtml")
</head>
<body x-data="main" x-init="$store.app.hasCreative = window.location.href.includes('creative.html') ,
$store.app.hasdetached = window.location.href.includes('detached.html')" :class="[ $store.app.sidebar ?
'toggle-sidebar' : '', $store.app.fullscreen ? 'full' : '' , $store.app.hasCreative ? 'detached ' : '' ,
 $store.app.hasdetached ? 'detached detached-simple ' : '' , $store.app.layout  ]"
      class="relative overflow-x-hidden text-sm antialiased font-normal text-black font-cerebri dark:text-white vertical  " x-data="modals">


    <!-- Start Layout -->
    <div style="background-image: url('@imageUrl');" class="bg-[#f9fbfd] text-black dark:bg-darklight bg-cover bg-no-repeat">


        <!-- Start Header -->
        <header>
            <nav class="px-4 lg:px-7 py-4 max-w-[1440px] mx-auto">
                <div class="flex flex-wrap items-center justify-between">
                    <a href="/" class="flex items-center">
                        <img src="~/assets/images/logo-dark.svg" class="mx-auto dark-logo h-7 dark:hidden" alt="logo">
                        <img src="~/assets/images/logo-light.svg" class="hidden mx-auto light-logo h-7 dark:block" alt="logo">
                    </a>
                   
                </div>
            </nav>
        </header>
        <!-- End Header -->

        @RenderBody()

        <!-- Start Footer -->
        <footer class="py-5 text-center text-black dark:text-white/80 max-w-[1440px] mx-auto">
            <div x-data="{ year: new Date().getFullYear() }">
                &copy;
                <span x-text="year"></span>
                LeanForge Vision.
                <span>
                    Crafted with
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-4 h-4 inline-block relative -mt-[2px]">
                        <path d="M12.001 4.52853C14.35 2.42 17.98 2.49 20.2426 4.75736C22.5053 7.02472 22.583 10.637 20.4786 12.993L11.9999 21.485L3.52138 12.993C1.41705 10.637 1.49571 7.01901 3.75736 4.75736C6.02157 2.49315 9.64519 2.41687 12.001 4.52853Z" class="fill-purple"></path>
                    </svg>
                    by Lean 4.0
                </span>
            </div>
        </footer>
        <!-- End Footer -->
    </div>


    @Html.Partial("~/Views/Shared/Vendor_Scripts.cshtml")

    @RenderSection("scripts", required: false)
</body>
</html>